{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
  },
  "include": [
    ".eslintrc.js",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
